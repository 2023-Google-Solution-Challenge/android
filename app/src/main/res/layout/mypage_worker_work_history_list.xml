<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="24dp"
    android:paddingHorizontal="22dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contract_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_main_c_stroke"
        android:paddingVertical="25dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_work_place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font"
            android:text="Cafe peach"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_start_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font"
            android:text="2022.11.19"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_work_place"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/tv_while"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font"
            android:text="~"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_start_day"
            app:layout_constraintTop_toBottomOf="@id/tv_work_place"
            android:layout_marginTop="6dp"
            android:layout_marginStart="2dp"/>

        <TextView
            android:id="@+id/tv_end_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font"
            android:text="2022.11.19"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_while"
            app:layout_constraintTop_toBottomOf="@id/tv_work_place"
            android:layout_marginTop="6dp"
            android:layout_marginStart="2dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



