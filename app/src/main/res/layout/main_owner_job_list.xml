<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="26dp"
    android:paddingHorizontal="24dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/orecruit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/box_stroke_gray_all"
        android:paddingVertical="10dp"
        android:paddingHorizontal="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_job_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font"
            android:text="Cafe peach"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_job_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font"
            android:text="Cafe peach 직원모집"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_job_name"
            android:layout_marginTop="3dp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/o_job_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="250dp"
            android:src="@drawable/btn_all_right_2"
            app:layout_constraintLeft_toRightOf="@+id/tv_job_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_job_name" />

        <TextView
            android:id="@+id/tv1_job_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font"
            android:text="Posted"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_job_title"
            android:layout_marginTop="3dp"/>

        <TextView
            android:id="@+id/tv_job_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font"
            android:text="2022.11.14"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/tv1_job_list"
            app:layout_constraintTop_toBottomOf="@id/tv_job_title"
            android:layout_marginTop="3dp"
            android:layout_marginStart="3dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_end_recurit"
            android:layout_width="160dp"
            android:layout_height="37dp"
            android:text="End recruitment"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:background="@drawable/box_main_c_all"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_job_date"
            android:layout_marginTop="11dp">

        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_view_candi"
            android:layout_width="160dp"
            android:layout_height="37dp"
            android:textAllCaps="false"
            android:layout_marginLeft="12dp"
            android:background="@drawable/box_main_c_all"
            android:text="Manage candidates"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/btn_end_recurit"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btn_end_recurit">

        </androidx.appcompat.widget.AppCompatButton>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



