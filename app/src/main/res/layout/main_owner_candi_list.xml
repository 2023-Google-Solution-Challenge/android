<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="24dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/candi_info"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:background="@drawable/box_stroke_gray_all"
        android:paddingVertical="10dp"
        android:paddingHorizontal="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="24dp">

        <TextView
            android:id="@+id/tv_candi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font"
            android:text="홍길동"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_candi_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font"
            android:text="2022.11.19"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_candi_name"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="230dp"/>

        <TextView
            android:id="@+id/tv_work_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font"
            android:text="월요일, 수요일 | 10:00 ~ 14:00"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_candi_name"
            android:layout_marginTop="3dp"/>

        <TextView
            android:id="@+id/tv_candi_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/font"
            android:text="신뢰도 50"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_work_day"
            android:layout_marginTop="6dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_candi_decide"
            android:layout_width="142dp"
            android:layout_height="34dp"
            android:text="확정하기"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:background="@drawable/box_main_c_all"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_candi_score"
            android:layout_marginTop="11dp">

        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_view_candi"
            android:layout_width="142dp"
            android:layout_height="34dp"
            android:text="지원서 보기"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:background="@drawable/box_main_c_all"
            app:layout_constraintTop_toTopOf="@+id/tv_candi_name"
            app:layout_constraintLeft_toRightOf="@+id/btn_candi_decide"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="74dp"
            android:layout_marginLeft="12dp">

        </androidx.appcompat.widget.AppCompatButton>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



