<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/box_white_all"
    android:paddingHorizontal="24dp"
    android:paddingTop="30dp">
    <TextView
        android:id="@+id/tv_dialogholiday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="휴가요청"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/tv2_dialogholiday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="휴가 요청 사유를 적어주세요"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_dialogholiday"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="14dp"/>
    <Button
        android:id="@+id/tv_dialogholiday_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:stateListAnimator="@null"
        android:textColor="@color/font"
        android:text="취소"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv2_dialogholiday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_dialogholiday_ok"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:paddingVertical="20dp"
        android:paddingHorizontal="50dp"/>
    <Button
        android:id="@+id/tv_dialogholiday_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:stateListAnimator="@null"
        android:textColor="@color/font"
        android:text="확인"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/tv_dialogholiday_cancel"
        app:layout_constraintTop_toTopOf="@id/tv_dialogholiday_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingVertical="20dp"
        android:paddingHorizontal="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>