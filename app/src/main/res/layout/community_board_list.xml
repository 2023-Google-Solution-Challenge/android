<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/v1_community"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/gray3"/>

    <ImageView
        android:id="@+id/img_community"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:background="@drawable/shape_circle_gray"
        app:layout_constraintTop_toBottomOf="@id/v1_community"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginStart="2dp"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="title"
        app:layout_constraintLeft_toRightOf="@+id/img_community"
        app:layout_constraintTop_toTopOf="@id/img_community"
        android:layout_marginStart="10dp"
        android:textColor="@color/font"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nickname"
        app:layout_constraintLeft_toRightOf="@+id/img_community"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:layout_marginStart="10dp"
        android:textColor="@color/font"
        android:layout_marginTop="11dp"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/tv_community_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2022.12.12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_title"
        android:layout_marginStart="10dp"
        android:textColor="@color/gray1"
        android:layout_marginTop="11dp"
        android:textSize="8sp"/>

    <TextView
        android:id="@+id/tv2_community"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comments"
        app:layout_constraintRight_toLeftOf="@id/tv_comment"
        app:layout_constraintTop_toBottomOf="@+id/tv_community_date"
        android:layout_marginStart="10dp"
        android:textColor="@color/gray1"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="3dp"
        android:textSize="8sp"/>

    <TextView
        android:id="@+id/tv_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        app:layout_constraintRight_toLeftOf="@+id/tv3_community"
        app:layout_constraintTop_toBottomOf="@+id/tv_community_date"
        android:layout_marginStart="10dp"
        android:textColor="@color/gray1"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="3dp"
        android:textSize="8sp"/>

    <TextView
        android:id="@+id/tv3_community"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="|"
        app:layout_constraintRight_toLeftOf="@+id/tv4_community"
        app:layout_constraintTop_toBottomOf="@+id/tv_community_date"
        android:layout_marginStart="10dp"
        android:textColor="@color/gray1"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="3dp"
        android:textSize="8sp"/>

    <TextView
        android:id="@+id/tv4_community"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View counts"
        app:layout_constraintRight_toLeftOf="@id/tv_view_counts"
        app:layout_constraintTop_toBottomOf="@+id/tv_community_date"
        android:layout_marginStart="10dp"
        android:textColor="@color/gray1"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="3dp"
        android:textSize="8sp"/>

    <TextView
        android:id="@+id/tv_view_counts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_community_date"
        android:layout_marginStart="10dp"
        android:textColor="@color/gray1"
        android:layout_marginTop="6dp"
        android:textSize="8sp"/>

    <View
        android:id="@+id/v2_community"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_community"
        android:background="@color/gray3"
        android:layout_marginTop="15dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>