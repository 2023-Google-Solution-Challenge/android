<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/box_white_all"
    android:paddingHorizontal="24dp"
    android:paddingVertical="30dp">
    <TextView
        android:id="@+id/tv_dialogok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="휴게시간 종료"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv2_dialogok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="휴게시간이 종료되었습니다"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_dialogok"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="14dp"/>
    <Button
        android:id="@+id/btn_dialogok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:stateListAnimator="@null"
        android:textColor="@color/font"
        android:text="확인"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv2_dialogok"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:paddingVertical="20dp"
        android:paddingHorizontal="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>