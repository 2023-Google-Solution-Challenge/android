<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="24dp"
    android:paddingTop="24dp">

    <TextView
        android:id="@+id/tv_mypage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My page"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_mypage_setting"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:background="@drawable/img_mypage_settings"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/img_mypage_profile"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:background="@drawable/shape_circle_gray"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_mypage"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tv_mypage_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cheolsu Kim"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/font"
        app:layout_constraintTop_toBottomOf="@+id/tv_mypage"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toRightOf="@+id/img_mypage_profile"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/tv_mypage_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Anam-dong 5-ga, Seongbuk-gu, Seoul, Korea"
        android:textSize="12sp"
        android:textColor="@color/gray1"
        app:layout_constraintTop_toBottomOf="@+id/tv_mypage_name"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toRightOf="@+id/img_mypage_profile"
        android:layout_marginLeft="20dp"/>

    <TextView
        android:id="@+id/tv_mypage_modify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:textSize="12sp"
        android:textColor="@color/font"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_mypage_setting"
        android:layout_marginTop="24dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/img_mypage_box"
        android:layout_width="358dp"
        android:layout_height="80dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="2dp"
        android:background="@drawable/box_white_all"
        android:elevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_mypage_profile">

        <ImageView
            android:id="@+id/img_mypage_contract"
            android:layout_width="37.73dp"
            android:layout_height="30dp"
            android:layout_marginStart="42dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/img_mypage_contract"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_mypage_jobinfo"
            android:layout_width="29dp"
            android:layout_height="36dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/img_mypage_jobinfo"
            app:layout_constraintLeft_toRightOf="@+id/img_mypage_contract"
            app:layout_constraintRight_toLeftOf="@+id/img_mypage_money"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/img_mypage_money"
            android:layout_width="47dp"
            android:layout_height="35dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="50dp"
            android:background="@drawable/img_mypage_money"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_mypage_contract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="39dp"
            android:layout_marginTop="7dp"
            android:text="Contract"
            android:textColor="@color/font"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_mypage_contract" />

        <TextView
            android:id="@+id/tv_mypage_worker"
            android:layout_width="73dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Employee management"
            android:textAlignment="center"
            android:textColor="@color/font"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/tv_mypage_contract"
            app:layout_constraintRight_toLeftOf="@+id/tv_mypage_money"
            app:layout_constraintTop_toBottomOf="@+id/img_mypage_jobinfo" />

        <TextView
            android:id="@+id/tv_mypage_money"
            android:layout_width="73dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="34dp"
            android:text="Pay management"
            android:textColor="@color/font"
            android:textSize="12sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img_mypage_money" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_mypage_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Badge"
        android:textSize="14sp"
        android:textColor="@color/font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_mypage_box"
        android:layout_marginTop="24dp"/>

    <View
        android:id="@+id/v1_mypage"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray2"
        app:layout_constraintTop_toBottomOf="@+id/tv_mypage_badge"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/tv_badge1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textSize="20sp"
        android:textColor="@color/main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v1_mypage"
        android:layout_marginTop="24dp"
        android:layout_marginStart="33dp"/>

    <TextView
        android:id="@+id/tv_badge2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:textSize="20sp"
        android:textColor="@color/main"
        app:layout_constraintTop_toBottomOf="@+id/v1_mypage"
        app:layout_constraintLeft_toRightOf="@id/tv_badge1"
        app:layout_constraintRight_toLeftOf="@+id/tv_badge3"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tv_badge3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="20sp"
        android:textColor="@color/main"
        app:layout_constraintTop_toBottomOf="@+id/v1_mypage"
        app:layout_constraintLeft_toRightOf="@id/tv_badge2"
        app:layout_constraintRight_toLeftOf="@id/tv_badge4"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tv_badge4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:textSize="20sp"
        android:textColor="@color/main"
        app:layout_constraintTop_toBottomOf="@+id/v1_mypage"
        android:layout_marginTop="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="33dp"/>

    <TextView
        android:id="@+id/tv_bg1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Worker edu"
        android:textSize="12sp"
        android:textColor="@color/font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_badge1"
        android:layout_marginTop="24dp"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/tv_bg2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Safety edu"
        android:textSize="12sp"
        android:textColor="@color/font"
        app:layout_constraintTop_toBottomOf="@+id/tv_badge2"
        app:layout_constraintLeft_toRightOf="@id/tv_bg1"
        app:layout_constraintRight_toLeftOf="@+id/tv_bg3"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tv_bg3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Awareness"
        android:textSize="12sp"
        android:textColor="@color/font"
        app:layout_constraintTop_toBottomOf="@+id/tv_badge3"
        app:layout_constraintLeft_toRightOf="@id/tv_bg2"
        app:layout_constraintRight_toLeftOf="@id/tv_bg4"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tv_bg4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gender edu"
        android:textSize="12sp"
        android:textColor="@color/font"
        app:layout_constraintTop_toBottomOf="@+id/tv_badge4"
        android:layout_marginTop="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/img_mypage_confidence"
        android:layout_width="358dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/box_white_all"
        android:elevation="5dp"
        android:paddingHorizontal="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_bg1">

        <TextView
            android:id="@+id/tv_confi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Reliability"
            android:textSize="12sp"
            android:textColor="@color/font"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_confi_lv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"
            android:textSize="12sp"
            android:textColor="@color/font"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toEndOf="@id/tv_confi"
            android:layout_marginStart="5dp"/>

        <ProgressBar
            android:id="@+id/bar_reliable"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="50"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_confi_lv"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="15dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tv_confi2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reliability?"
        android:textSize="12sp"
        android:textColor="@color/font"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_mypage_confidence"/>

    <TextView
        android:id="@+id/tv_confi_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reliability"
        android:textSize="10sp"
        android:textColor="@color/gray1"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_confi2"/>


</androidx.constraintlayout.widget.ConstraintLayout>