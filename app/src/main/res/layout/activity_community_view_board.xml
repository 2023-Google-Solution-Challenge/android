<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="13dp">

    <ImageView
        android:id="@+id/btn_all_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_all_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="24dp"/>

    <TextView
        android:id="@+id/tv_board_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="신고"
        android:textSize="16sp"
        android:textColor="@color/font"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_all_back"
        app:layout_constraintBottom_toBottomOf="@id/btn_all_back" />
    <View
        android:id="@+id/v1_all"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray3"
        app:layout_constraintTop_toBottomOf="@+id/btn_all_back"
        android:layout_marginTop="13dp"/>

    <TextView
        android:id="@+id/tv3_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Can I get a weekly holiday pay?"
        android:textColor="@color/font"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/v1_all"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="27dp"/>

    <TextView
        android:id="@+id/tv4_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="조회수"
        android:textColor="@color/gray1"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@+id/tv3_board"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"
        android:layout_marginHorizontal="27dp"/>

    <TextView
        android:id="@+id/tv_board_viewcounts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="16"
        android:textColor="@color/gray1"
        android:textSize="10sp"
        app:layout_constraintTop_toBottomOf="@+id/tv3_board"
        app:layout_constraintLeft_toRightOf="@+id/tv4_board"
        android:layout_marginTop="4dp"
        android:layout_marginStart="2dp"/>

    <View
        android:id="@+id/v2_all"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray3"
        app:layout_constraintTop_toBottomOf="@+id/tv_board_viewcounts"
        android:layout_marginTop="9dp"
        android:layout_marginHorizontal="24dp"/>

    <TextView
        android:id="@+id/tv5_board"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Starting next week, the work week has been reduced to 14.5 hours. Would it be possible for me to receive a weekly holiday pay?"
        android:textColor="@color/font"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/v2_all"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="24dp"/>

    <View
        android:id="@+id/v3_all"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/gray3"
        app:layout_constraintTop_toBottomOf="@+id/tv5_board"
        android:layout_marginTop="133dp" />

    <TextView
        android:id="@+id/tv6_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="댓글 (1)"
        android:textColor="@color/font"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/v3_all"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="27dp"/>

    <EditText
        android:id="@+id/et_board_comments"
        android:layout_width="273dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@id/tv6_board"
        android:background="@drawable/box_stroke_gray_all"
        android:hint="댓글을 입력해주세요"
        android:textSize="12sp"
        android:layout_marginTop="13dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="24dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tv_board_comments"
        android:layout_width="75dp"
        android:layout_height="35dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/box_gray42_all"
        android:text="등록"
        android:textColor="@color/gray1"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/et_board_comments"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_board_comments" />

    <View
        android:id="@+id/v4_all"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray3"
        app:layout_constraintTop_toBottomOf="@+id/tv_board_comments"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="24dp"/>

    <ImageView
        android:id="@+id/img_comments"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/shape_circle_gray"
        app:layout_constraintTop_toBottomOf="@id/v4_all"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="24dp"/>

    <TextView
        android:id="@+id/tv_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="knv**7"
        app:layout_constraintLeft_toRightOf="@+id/img_comments"
        app:layout_constraintTop_toTopOf="@id/img_comments"
        android:layout_marginStart="12dp"
        android:textColor="@color/font"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2023.03.27"
        app:layout_constraintLeft_toRightOf="@+id/img_comments"
        app:layout_constraintTop_toBottomOf="@id/tv_nickname"
        android:layout_marginStart="12dp"
        android:textColor="@color/gray1"
        android:layout_marginTop="3dp"
        android:textSize="8sp"/>

    <TextView
        android:id="@+id/tv_comments"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="The weekly holiday pay is unlikely to be received as it can only be granted if the contracted hours exceed 15 hours as per the labor agreement."
        android:textColor="@color/font"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/tv_date"
        app:layout_constraintTop_toBottomOf="@id/tv_date" />

</androidx.constraintlayout.widget.ConstraintLayout>