<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="24dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/pob1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:background="@drawable/box_stroke_gray_all"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_pob_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cafe peach"
            android:textColor="@color/font"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_pob_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="123-45-67890"
            android:textColor="@color/font"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_pob_name" />

        <ImageView
            android:id="@+id/o_pob_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="244dp"
            android:src="@drawable/btn_all_right_2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_pob_name" />

        <TextView
            android:id="@+id/tv_pob_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="2022.11.14"
            android:textColor="@color/font"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_pob_num" />

        <TextView
            android:id="@+id/tv_pob_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="등록"
            android:textColor="@color/font"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@id/tv_pob_date"
            android:layout_marginStart="3dp"
            app:layout_constraintTop_toBottomOf="@id/tv_pob_num" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_del_pob"
            android:layout_width="160dp"
            android:layout_height="37dp"
            android:background="@drawable/box_main_c_all"
            android:text="삭제하기"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_pob_date"
            android:layout_marginTop="11dp">

        </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_ad_worker"
            android:layout_width="160dp"
            android:layout_height="37dp"
            android:layout_marginLeft="12dp"
            android:background="@drawable/box_main_c_all"
            android:text="근무자 관리"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintLeft_toRightOf="@+id/btn_del_pob"
            app:layout_constraintTop_toTopOf="@+id/btn_del_pob"
            app:layout_constraintEnd_toEndOf="parent">

        </androidx.appcompat.widget.AppCompatButton>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



