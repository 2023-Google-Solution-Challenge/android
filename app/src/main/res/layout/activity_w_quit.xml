<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="13dp">
    <ImageView
        android:id="@+id/btn_quit_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_all_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="24dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="그만두기"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_quit_back"
        app:layout_constraintBottom_toBottomOf="@id/btn_quit_back" />
    <View
        android:id="@+id/v1_quit"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray3"
        app:layout_constraintTop_toBottomOf="@+id/btn_quit_back"
        android:layout_marginTop="13dp"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:paddingTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/v1_quit"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tv_quit_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="근무지 정보"
            android:textColor="@color/font"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_quit"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:background="@drawable/box_main_c_all"
            android:backgroundTint="@color/gray4"
            android:paddingVertical="18dp"
            android:paddingHorizontal="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_quit_info"
            android:layout_marginTop="24dp">
            <TextView
                android:id="@+id/tv_quit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cafe peach"
                android:textSize="16sp"
                android:textColor="@color/font"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:id="@+id/tv_quit_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monday"
                android:textSize="12sp"
                android:textColor="@color/font"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_quit_title"
                android:layout_marginTop="6dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:textSize="12sp"
                android:textColor="@color/font"
                app:layout_constraintStart_toEndOf="@id/tv_quit_day"
                app:layout_constraintTop_toTopOf="@id/tv_quit_day"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/tv_quit_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:00~14:00"
                android:textSize="12sp"
                android:textColor="@color/font"
                app:layout_constraintStart_toEndOf="@id/tv_quit_day"
                app:layout_constraintTop_toTopOf="@id/tv_quit_day"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tv_quit_period"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2022.11.19 ~ 2023.5.19"
                android:textSize="12sp"
                android:textColor="@color/font"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_quit_day"
                android:layout_marginTop="6dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_quit_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사직 사유"
            android:textColor="@color/font"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_quit"
            android:layout_marginTop="24dp"/>
        <EditText
            android:id="@+id/et_quit_reason"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/box_stroke_all"
            app:layout_constraintStart_toStartOf="parent"
            android:hint="사직 사유를 입력해주세요"
            android:textSize="14sp"
            android:gravity="top"
            android:inputType="textMultiLine"
            app:layout_constraintTop_toBottomOf="@+id/tv_quit_reason"
            android:layout_marginTop="9dp"
            android:paddingHorizontal="15dp"
            android:paddingVertical="12dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_quit_done"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:text="작성완료"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:background="@drawable/box_main_c_all"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>