<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_marginHorizontal="24dp"
        android:id="@+id/tv1_ch_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="휴대폰번호 인증"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"/>

    <TextView
        android:layout_marginHorizontal="24dp"
        android:id="@+id/tv2_ch_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="휴대폰"
        android:textSize="12sp"
        android:textColor="@color/font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv1_ch_phone"
        android:layout_marginTop="38dp"/>

    <EditText
        android:layout_marginHorizontal="24dp"
        android:id="@+id/et1_ch_phone"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="휴대폰번호를 입력해주세요."
        android:textColor="@color/font"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@+id/tv2_ch_phone"
        app:layout_constraintTop_toBottomOf="@+id/tv1_ch_phone"
        android:layout_marginStart="53dp"
        android:background="@drawable/box_gray42_all"/>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_verify_phone"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/box_main_c_all"
        android:text="인증번호 받기"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/et1_ch_phone"
        app:layout_constraintTop_toBottomOf="@+id/et1_ch_phone"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_marginHorizontal="24dp"
        android:id="@+id/tv8_mod_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="인증번호"
        android:textSize="12sp"
        android:textColor="@color/font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv2_ch_phone"
        android:layout_marginTop="92dp"/>

    <EditText
        android:id="@+id/et_mod_email"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:hint="인증번호를 입력해주세요"
        android:textColor="@color/font"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/btn_verify_phone"
        app:layout_constraintTop_toBottomOf="@+id/btn_verify_phone"
        android:background="@drawable/box_gray42_all"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_phone_cancel"
        android:layout_width="173dp"
        android:layout_height="42dp"
        android:text="취소"
        android:layout_marginHorizontal="24dp"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:background="@drawable/box_gray1_all"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="174dp"
        android:layout_height="42dp"
        android:text="확인"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:background="@drawable/box_main_c_all"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="24dp"
        app:layout_constraintStart_toEndOf="@+id/btn_phone_cancel"
        android:layout_marginStart="13dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>