<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="13dp">
    <ImageView
        android:id="@+id/btn_wpay_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_all_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="24dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payroll Management"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_wpay_back"
        app:layout_constraintBottom_toBottomOf="@id/btn_wpay_back" />
    <ImageView
        android:id="@+id/btn_wpay_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_pay_addaccount"
        app:layout_constraintTop_toTopOf="@id/btn_wpay_back"
        app:layout_constraintBottom_toBottomOf="@id/btn_wpay_back"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="24dp"/>
    <View
        android:id="@+id/v1_wpay"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray3"
        app:layout_constraintTop_toBottomOf="@+id/btn_wpay_back"
        android:layout_marginTop="13dp"/>

<!--    <androidx.recyclerview.widget.RecyclerView-->
<!--        android:id="@+id/rv_wpay_shop"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="84dp"-->
<!--        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@id/v1_wpay"-->
<!--        android:paddingHorizontal="24dp"-->
<!--        android:paddingVertical="13dp"-->
<!--        tools:listitem="@layout/item_shop"/>-->
    <ImageView
        android:id="@+id/rv_wpay_shop"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:src="@drawable/img_shoplist_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v1_wpay"
        app:layout_constraintBottom_toTopOf="@id/v2_wpay"
        android:layout_marginLeft="24dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cafe"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/rv_wpay_shop"
        app:layout_constraintBottom_toBottomOf="@id/rv_wpay_shop"
        app:layout_constraintStart_toStartOf="@id/rv_wpay_shop"
        app:layout_constraintEnd_toEndOf="@id/rv_wpay_shop"/>
    <View
        android:id="@+id/v2_wpay"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray3"
        app:layout_constraintTop_toBottomOf="@+id/rv_wpay_shop" />

    <TextView
        android:id="@+id/tv_wpay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay Information"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v2_wpay"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="16dp"/>
    <View
        android:id="@+id/v3_wpay"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray3"
        app:layout_constraintTop_toBottomOf="@+id/tv_wpay"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"/>
    <TextView
        android:id="@+id/tv2_wpay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay Date"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/v3_wpay"
        app:layout_constraintTop_toBottomOf="@id/v3_wpay"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/tv3_wpay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/v3_wpay"
        app:layout_constraintTop_toBottomOf="@id/tv2_wpay"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/tv4_wpay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Holiday Pay"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/v3_wpay"
        app:layout_constraintTop_toBottomOf="@id/tv3_wpay"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/tv_wpay_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monthly 3"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/v3_wpay"
        app:layout_constraintTop_toTopOf="@id/tv2_wpay"
        app:layout_constraintBottom_toBottomOf="@id/tv2_wpay"/>
    <TextView
        android:id="@+id/tv_wpay_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="â‚©9700"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/v3_wpay"
        app:layout_constraintTop_toTopOf="@id/tv3_wpay"
        app:layout_constraintBottom_toBottomOf="@id/tv3_wpay"/>
    <TextView
        android:id="@+id/tv_wpay_weeklypay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/v3_wpay"
        app:layout_constraintTop_toTopOf="@id/tv4_wpay"
        app:layout_constraintBottom_toBottomOf="@id/tv4_wpay"/>

    <View
        android:id="@+id/v4_wpay"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray3"
        app:layout_constraintTop_toBottomOf="@+id/tv4_wpay"
        android:layout_marginTop="28dp"/>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_wpay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/v4_wpay"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray3"
        app:layout_constraintTop_toBottomOf="@id/tab_wpay"/>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager_wpay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tab_wpay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>