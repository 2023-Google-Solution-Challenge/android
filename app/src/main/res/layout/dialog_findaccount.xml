<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/box_white_all"
    android:paddingHorizontal="24dp"
    android:paddingTop="30dp">
    <TextView
        android:id="@+id/tv_dialogfa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원님의 아이디는 ''입니다"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv_dialogfa_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호를 변경해주시길 바랍니다."
        android:visibility="gone"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_dialogfa"
        app:layout_constraintStart_toStartOf="parent"/>
    <Button
        android:id="@+id/tv_dialogfa_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:stateListAnimator="@null"
        android:textColor="@color/font"
        android:text="확인"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_dialogfa_pw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_dialogfa_login"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:paddingVertical="20dp"
        android:paddingHorizontal="50dp"/>
    <Button
        android:id="@+id/tv_dialogfa_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:stateListAnimator="@null"
        android:textColor="@color/font"
        android:text="로그인"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/tv_dialogfa_ok"
        app:layout_constraintTop_toTopOf="@id/tv_dialogfa_ok"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingVertical="20dp"
        android:paddingHorizontal="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>