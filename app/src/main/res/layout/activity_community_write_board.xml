<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="13dp">

    <ImageView
        android:id="@+id/btn_all_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_all_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="24dp"/>
    <TextView
        android:id="@+id/tv1_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write a board"
        android:textSize="16sp"
        android:textColor="@color/font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_all_back"
        app:layout_constraintBottom_toBottomOf="@id/btn_all_back" />

    <TextView
        android:id="@+id/tv_board_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:textSize="16sp"
        android:textColor="@color/font"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_all_back"
        app:layout_constraintBottom_toBottomOf="@id/btn_all_back" />
    <View
        android:id="@+id/v1_all"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray3"
        app:layout_constraintTop_toBottomOf="@+id/btn_all_back"
        android:layout_marginTop="13dp"/>

    <TextView
        android:id="@+id/tv3_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textColor="@color/font"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/v1_all"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="27dp"/>

    <EditText
        android:id="@+id/et_board_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        app:layout_constraintTop_toBottomOf="@id/tv3_board"
        android:background="@drawable/box_stroke_gray_all"
        android:hint="Write a title"
        android:textSize="14sp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="24dp"/>

    <TextView
        android:id="@+id/tv4_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contents"
        android:textColor="@color/font"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/et_board_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="27dp"/>

    <EditText
        android:id="@+id/et_board_contents"
        android:layout_width="match_parent"
        android:layout_height="285dp"
        app:layout_constraintTop_toBottomOf="@id/tv4_board"
        android:background="@drawable/box_stroke_gray_all"
        android:textSize="14sp"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginHorizontal="24dp"/>

    <TextView
        android:id="@+id/tv5_board"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Upload Image"
        android:textColor="@color/font"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/et_board_contents"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="27dp"/>
    
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="125dp"
        android:layout_height="35dp"
        android:text="Select Image"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:background="@drawable/box_gray42_all"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_board_contents"
        android:layout_marginTop="20dp"
        android:textColor="@color/gray1"
        android:textStyle="bold"
        android:layout_marginHorizontal="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>