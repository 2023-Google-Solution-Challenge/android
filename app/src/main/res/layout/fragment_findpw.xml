<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="28dp"
    android:paddingHorizontal="24dp">
    <TextView
        android:id="@+id/tv_findpw_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/et_findpw_email"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="Enter email"
        android:textSize="14sp"
        android:inputType="textEmailAddress"
        android:background="@drawable/box_stroke_all"
        android:paddingVertical="13dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_findpw_email"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"/>
    <TextView
        android:id="@+id/tv_findpw_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        app:layout_constraintTop_toBottomOf="@+id/et_findpw_email"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/et_findpw_name"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="enter name"
        android:textSize="14sp"
        android:inputType="text"
        android:background="@drawable/box_stroke_all"
        android:paddingVertical="13dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_findpw_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"/>
    <TextView
        android:id="@+id/tv_findpw_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="phone number"
        app:layout_constraintTop_toBottomOf="@+id/et_findpw_name"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"/>
    <EditText
        android:id="@+id/et_findpw_number"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:hint="ex) 01012345678"
        android:textSize="14sp"
        android:inputType="number"
        android:background="@drawable/box_stroke_all"
        android:paddingVertical="13dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_findpw_number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_findpw_certify"
        android:layout_marginTop="4dp"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:layout_marginRight="7dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_findpw_certify"
        android:layout_width="93dp"
        android:layout_height="44dp"
        android:text="인증번호 받기"
        android:textSize="14sp"
        android:background="@drawable/box_stroke_black_all"
        app:layout_constraintTop_toTopOf="@id/et_findpw_number"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tv_findpw_certi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Authentication Number"
        app:layout_constraintTop_toBottomOf="@+id/et_findpw_number"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:visibility="gone"/>
    <EditText
        android:id="@+id/et_findpw_certi"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:hint="Enter the number you received"
        android:textSize="14sp"
        android:inputType="number"
        android:background="@drawable/box_stroke_all"
        android:paddingVertical="13dp"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_findpw_certi"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="4dp"
        android:visibility="gone"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_findpw_confirm"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/box_main_c_all"
        android:backgroundTint="@color/font"
        android:text="ok"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_findpw_certi"
        android:layout_marginTop="28dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>