<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="13dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calendar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btn_calendar_notice"
            app:layout_constraintBottom_toBottomOf="@id/btn_calendar_notice" />
        <ImageView
            android:id="@+id/btn_calendar_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_calendar_bell"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="24dp"/>
        <View
            android:id="@+id/v1_calendar"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray3"
            app:layout_constraintTop_toBottomOf="@+id/btn_calendar_notice"
            android:layout_marginTop="13dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_calendar_shop"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            app:layout_constraintTop_toBottomOf="@id/v1_calendar"
            app:layoutManager="androidx.recyclerview.widget.StaggeredGridLayoutManager"
            tools:listitem="@layout/item_shop"
            android:paddingVertical="12dp"
            android:paddingHorizontal="24dp"/>
        <View
            android:id="@+id/v2_calendar"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray3"
            app:layout_constraintTop_toBottomOf="@+id/rv_calendar_shop"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F7F8F9"
            app:layout_constraintTop_toBottomOf="@+id/v2_calendar"
            app:layout_constraintBottom_toBottomOf="parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_calendar"
                android:layout_width="match_parent"
                android:layout_height="370dp"
                android:background="@drawable/box_calendar"
                app:layout_constraintTop_toTopOf="parent">
                <CalendarView
                    android:id="@+id/cv_calendar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/box_calendar"
                app:layout_constraintTop_toBottomOf="@id/cl_calendar"
                android:layout_marginTop="16dp"
                android:paddingHorizontal="24dp"
                android:paddingVertical="14dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="근무자 관리"
                    android:textSize="16dp"
                    app:layout_constraintTop_toTopOf="@id/btn_calendar_manage"
                    app:layout_constraintBottom_toBottomOf="@id/btn_calendar_manage"
                    app:layout_constraintStart_toStartOf="parent"/>
                <ImageView
                    android:id="@+id/btn_calendar_manage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_all_right_15"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <View
                    android:id="@+id/v3_calendar"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray3"
                    app:layout_constraintTop_toBottomOf="@+id/btn_calendar_manage"
                    android:layout_marginTop="12dp"/>
                <ImageView
                    android:id="@+id/iv_calendar_worker1"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/shape_circle"
                    android:backgroundTint="#3151C5"
                    app:layout_constraintTop_toBottomOf="@+id/v3_calendar"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="16dp"/>
                <TextView
                    android:id="@+id/tv_calendar_worker1day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    app:layout_constraintTop_toTopOf="@id/iv_calendar_worker1"
                    app:layout_constraintBottom_toBottomOf="@id/iv_calendar_worker1"
                    app:layout_constraintStart_toStartOf="@id/iv_calendar_worker1"
                    app:layout_constraintEnd_toEndOf="@id/iv_calendar_worker1"/>
                <TextView
                    android:id="@+id/tv_calendar_worker1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이수정"
                    android:textSize="12dp"
                    app:layout_constraintTop_toBottomOf="@id/iv_calendar_worker1"
                    app:layout_constraintStart_toStartOf="@id/iv_calendar_worker1"
                    app:layout_constraintEnd_toEndOf="@id/iv_calendar_worker1"
                    android:layout_marginTop="7dp"/>
                <TextView
                    android:id="@+id/tv_calendar_worker1dt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="holiday   2"
                    android:textSize="12dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_calendar_worker1"
                    app:layout_constraintStart_toStartOf="@id/iv_calendar_worker1"
                    app:layout_constraintEnd_toEndOf="@id/iv_calendar_worker1"
                    android:layout_marginTop="2dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>