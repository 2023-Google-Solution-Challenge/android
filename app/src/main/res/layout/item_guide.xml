<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="12dp">
    <ImageView
        android:id="@+id/iv_itemguide"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/img_guide_q"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="근로계약서는 필수인가요?"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/iv_itemguide"
        app:layout_constraintTop_toTopOf="@id/iv_itemguide"
        app:layout_constraintBottom_toBottomOf="@id/iv_itemguide"
        android:layout_marginLeft="12sp"/>

    <View
        android:id="@+id/v1_itemguide"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray3"
        app:layout_constraintTop_toBottomOf="@id/iv_itemguide"
        android:layout_marginTop="12dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>