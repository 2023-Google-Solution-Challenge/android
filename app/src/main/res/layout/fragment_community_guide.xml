<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingHorizontal="24dp"
    android:paddingVertical="16dp">
    <SearchView
        android:id="@+id/sv_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_guide_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contract"
        android:textColor="@color/white"
        android:background="@drawable/box_main_c_all"
        app:layout_constraintTop_toBottomOf="@id/sv_guide"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_guide_2"
        android:layout_marginTop="16dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_guide_2"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="pay"
        android:textColor="@color/gray1"
        android:background="@drawable/box_main_c_all"
        android:backgroundTint="@color/gray5"
        app:layout_constraintTop_toTopOf="@id/btn_guide_1"
        app:layout_constraintStart_toEndOf="@id/btn_guide_1"
        app:layout_constraintEnd_toStartOf="@id/btn_guide_3"
        android:layout_marginLeft="12dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_guide_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="environment"
        android:textColor="@color/gray1"
        android:background="@drawable/box_main_c_all"
        android:backgroundTint="@color/gray5"
        app:layout_constraintTop_toTopOf="@id/btn_guide_1"
        app:layout_constraintStart_toEndOf="@id/btn_guide_2"
        app:layout_constraintEnd_toStartOf="@id/btn_guide_4"
        android:layout_marginLeft="12dp"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_guide_4"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="etc"
        android:textColor="@color/gray1"
        android:background="@drawable/box_main_c_all"
        android:backgroundTint="@color/gray5"
        app:layout_constraintTop_toTopOf="@id/btn_guide_1"
        app:layout_constraintStart_toEndOf="@id/btn_guide_3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="12dp"/>
    <View
        android:id="@+id/v1_guide"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray3"
        app:layout_constraintTop_toBottomOf="@id/btn_guide_4"
        android:layout_marginTop="12dp"/>

    <ImageView
        android:id="@+id/iv_itemguide"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/img_guide_q"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v1_guide"
        android:layout_marginTop="12dp"/>
    <TextView
        android:id="@+id/tv_itemguide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Is a employment contract required?"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@id/iv_itemguide"
        app:layout_constraintTop_toTopOf="@id/iv_itemguide"
        app:layout_constraintBottom_toBottomOf="@id/iv_itemguide"
        android:layout_marginLeft="12sp"/>
    <View
        android:id="@+id/v1_itemguide"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray3"
        app:layout_constraintTop_toBottomOf="@id/iv_itemguide"
        android:layout_marginTop="12dp"/>
