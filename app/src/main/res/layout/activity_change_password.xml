<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv1_chpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 변경"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"

        android:layout_marginHorizontal="24dp"/>


    <EditText
        android:id="@+id/et1_chpass"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/box_gray42_all"
        android:hint="기존 비밀번호"
        android:textSize="12sp"
        android:layout_marginHorizontal="24dp"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv1_chpass" />

    <EditText
        android:id="@+id/et2_chpass"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/box_gray42_all"
        android:hint="새 비밀번호"
        android:textSize="12sp"
        android:inputType="textPassword"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et1_chpass" />

    <EditText
        android:id="@+id/et3_chpass"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/box_gray42_all"
        android:hint="새 비밀번호 확인"
        android:textSize="12sp"
        android:inputType="textPassword"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et2_chpass" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_settings_cancel"
        android:layout_width="173dp"
        android:layout_height="48dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/box_gray1_all"
        android:text="취소"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_change_password"
        android:layout_width="174dp"
        android:layout_height="48dp"
        android:layout_marginStart="13dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/box_main_c_all"
        android:text="변경하기"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_settings_cancel" />

</androidx.constraintlayout.widget.ConstraintLayout>