<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="13dp">

    <ImageView
        android:id="@+id/btn_settings_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_all_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="24dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정"
        android:textSize="16sp"
        android:textColor="@color/font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/btn_settings_back"
        app:layout_constraintBottom_toBottomOf="@id/btn_settings_back" />
    <View
        android:id="@+id/v1_settings"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray3"
        app:layout_constraintTop_toBottomOf="@+id/btn_settings_back"
        android:layout_marginTop="13dp"/>

    <TextView
        android:id="@+id/tv_settings1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v1_settings"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tv_settings_logout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그아웃"
        android:textSize="12sp"
        android:textColor="@color/font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_settings1"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/tv_settings_ch_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 변경"
        android:textSize="12sp"
        android:textColor="@color/font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_settings_logout"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"/>

    <TextView
        android:id="@+id/tv_settings_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원 탈퇴"
        android:textSize="12sp"
        android:textColor="@color/font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_settings_ch_pass"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="24dp"/>

    <ImageView
        android:id="@+id/btn_chpass_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_all_right_2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@+id/v1_settings"
        android:layout_marginTop="108dp"/>

    <ImageView
        android:id="@+id/btn_delete_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/btn_all_right_2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="24dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_chpass_next"
        android:layout_marginTop="20dp"/>

    <View
        android:id="@+id/v2_settings"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray3"
        app:layout_constraintTop_toBottomOf="@+id/tv_settings_delete"
        android:layout_marginTop="24dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="앱 정보"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v2_settings"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>