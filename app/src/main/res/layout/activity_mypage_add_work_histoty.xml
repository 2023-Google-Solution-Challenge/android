<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="27dp"
    android:paddingHorizontal="24dp">

    <TextView
        android:id="@+id/tv1_w_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="근무이력 등록"
        android:textSize="16sp"
        android:textColor="@color/font"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv1_add_his"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="20dp"
        android:text="근무지명"
        android:textColor="@color/font"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv1_w_history"/>

    <EditText
        android:id="@+id/et_his_place_name"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/box_stroke_gray_all"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv1_add_his"/>

    <TextView
        android:id="@+id/tv2_add_his"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="20dp"
        android:text="근무기간"
        android:textColor="@color/font"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_his_place_name"/>

    <EditText
        android:id="@+id/et_his_start_day"
        android:layout_width="162dp"
        android:layout_height="44dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/box_stroke_gray_calender"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv2_add_his"
        android:hint="시작일 입력"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv3_add_his"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="20dp"
        android:text="~"
        android:textColor="@color/gray2"
        android:textSize="12sp"
        app:layout_constraintLeft_toRightOf="@id/et_his_start_day"
        app:layout_constraintTop_toBottomOf="@id/tv2_add_his"
        android:layout_marginStart="14dp"/>

    <EditText
        android:id="@+id/et_his_end_day"
        android:layout_width="162dp"
        android:layout_height="44dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/box_stroke_gray_calender"
        app:layout_constraintLeft_toRightOf="@+id/tv3_add_his"
        app:layout_constraintTop_toBottomOf="@+id/tv2_add_his"
        android:layout_marginStart="14dp"
        android:hint="종료일 입력"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv4_add_his"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="20dp"
        android:text="근무형태"
        android:textColor="@color/font"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_his_start_day"/>

    <EditText
        android:id="@+id/et_his_job_kind"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/box_stroke_gray_all"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv4_add_his"/>

    <TextView
        android:id="@+id/tv5_add_his"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginTop="20dp"
        android:text="근무 상세내용"
        android:textColor="@color/font"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_his_job_kind"/>

    <EditText
        android:id="@+id/et_his_job_describe"
        android:layout_width="match_parent"
        android:layout_height="203dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/box_stroke_gray_all"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv5_add_his"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_add_his"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/box_main_c_all"
        android:text="등록"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/et_his_job_describe"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>