<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/box_white_all"
    android:paddingHorizontal="24dp"
    android:paddingTop="30dp">
    <TextView
        android:id="@+id/tv_dialogwpay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="송금요청"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tv2_dialogwpay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="송금을 요청하시겠습니까?"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/tv_dialogwpay"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="14dp"/>
    <Button
        android:id="@+id/tv_dialogwpay_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:stateListAnimator="@null"
        android:textColor="@color/font"
        android:text="취소"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv2_dialogwpay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_dialogwpay_ok"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        android:paddingVertical="20dp"
        android:paddingHorizontal="50dp"/>
    <Button
        android:id="@+id/tv_dialogwpay_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/transparent"
        android:stateListAnimator="@null"
        android:textColor="@color/font"
        android:text="확인"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/tv_dialogwpay_cancel"
        app:layout_constraintTop_toTopOf="@id/tv_dialogwpay_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        android:paddingVertical="20dp"
        android:paddingHorizontal="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>